
@{
    ViewData["Title"] = "Login";
}

<div id="auth-app">
    <div class="col-4">
        <div class="d-flex justify-content-center">
            <input class="form-control" type="text" v-model="Login" placeholder="Login" />
        </div>
        <div class="d-flex justify-content-center">
            <input class="form-control" type="text" v-model="Password" placeholder="Password" />
        </div>
        <div class="d-flex justify-content-center">
            <button class="form-control bg-primary" v-on:click="onClick_Login">Login</button>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        var authUrl = '@Url.Action("Login", "Authorization")';
        var redirectUrl = '@Url.Action("Index", "Employee")';
    </script>

    <script src="~/js/app/authorization/index.js"></script>
}
